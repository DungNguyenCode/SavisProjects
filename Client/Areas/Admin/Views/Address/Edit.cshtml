@model Data.Models.Address

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="District" class="control-label"></label>
                <input asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wards" class="control-label"></label>
                <input asp-for="Wards" class="form-control" />
                <span asp-validation-for="Wards" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detailed_address" class="control-label"></label>
                <input asp-for="Detailed_address" class="form-control" />
                <span asp-validation-for="Detailed_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_User" class="control-label"></label>
                <input asp-for="Id_User" class="form-control" />
                <span asp-validation-for="Id_User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Edit Address</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-area="Admin" class="forms-sample">
            <div class="mb-3">
                <label asp-for="City" class="form-label">Address City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="District" class="form-label"> District</label>
                <input asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Wards" class="form-label"> Wards</label>
                <input asp-for="Wards" class="form-control" />
                <span asp-validation-for="Wards" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit"  class="btn btn-primary">Submit</button>
                <a asp-action="GetAll" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>
